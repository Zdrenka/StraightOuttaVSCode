{
	"name": "codetoslack",
	"displayName": "CodeToSlack",
	"description": "An extension to copy code from VSCode to slack with syntax highlighting",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.51.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:codetoslack.copy",
		"onCommand:codetoslack.listUsers"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "codetoslack.copy",
				"title": "Copy To Slack"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "editorHasSelection",
					"command": "codetoslack.copy",
					"group": "9_cutcopypaste"
				}
			]
		}
	},
	"configuration": {
		"type": "object",
		"title": "Straight Outta VSCode Configuration",
		"properties": {
			"straightOuttaVsCode.token": {
				"type": "string",
				"default": "",
				"description": "Slack team token"
			},
			"straightOuttaVsCode.listChannels": {
				"type": "boolean",
				"default": true,
				"description": "True if you want to list the channels"
			},
			"straightOuttaVsCode.listGroups": {
				"type": "boolean",
				"default": true,
				"description": "True if you want to list the groups"
			},
			"straightOuttaVsCode.listMembers": {
				"type": "boolean",
				"default": true,
				"description": "True if you want to list the members"
			},
			"straightOuttaVsCode.fileWithFullPath": {
				"type": "boolean",
				"default": false,
				"description": "True if you want to send files with full path"
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack --devtool nosources-source-map --config ./build/node-extension.webpack.config.js",
		"watch": "webpack --watch --devtool nosources-source-map --info-verbosity verbose --config ./build/node-extension.webpack.config.js",
		"package": "webpack --mode production --config ./build/node-extension.webpack.config.js",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "yarn run test-compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.51.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"ts-loader": "^8.0.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0",
		"webpack": "^4.44.1",
		"webpack-cli": "^3.3.12"
	},
	"dependencies": {
		"@slack/bolt": "^2.5.0",
		"@slack/events-api": "^2.3.4",
		"@slack/web-api": "^5.14.0",
		"request": "^2.88.2"
	}
}
